delimiter //
create or replace trigger trigger_del_htcondor_partition
after delete on condor_machines
for each row
begin
    if OLD.slot_type='Partitionable' then
        update csv2_vms set htcondor_partitionable_slots=ifnull(htcondor_partitionable_slots-1,0),htcondor_slots_timestamp=unix_timestamp() where hostname=substring_index(OLD.machine,'.',1);
    elseif OLD.slot_type='Dynamic' then
        update csv2_vms set htcondor_dynamic_slots=ifnull(htcondor_dynamic_slots-1,0),htcondor_slots_timestamp=unix_timestamp() where hostname=substring_index(OLD.machine,'.',1);
    end if;
end; //
delimiter ;
