/*
** Used to pick VMs to kill or retire.
*/
create or replace view view_vm_kill_retire_priority_list as

select
group_name,
cloud_name,
vmid,
case when my_current_time is null then 9999999999 else my_current_time-entered_current_state end as priority
from view_vms
group by group_name,cloud_name,vmid
order by priority desc
;
