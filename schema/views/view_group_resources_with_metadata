/*
** List all group resources (clouds) with associated metadata (at least one row per group
** resourceand one row per metadata file)..
*/
create or replace view view_group_resources_with_metadata as

select

vgr.*,
metadata_name,
cgrm.enabled as metadata_enabled,
priority as metadata_priority,
mime_type as metadata_mime_type,
metadata

from view_group_resources as vgr
left outer join csv2_group_resource_metadata as cgrm on
    vgr.group_name=cgrm.group_name and
    vgr.cloud_name=cgrm.cloud_name

order by vgr.group_name,vgr.cloud_name

;
