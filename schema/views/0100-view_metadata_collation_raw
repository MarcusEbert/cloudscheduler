/*
** List VMs with foreign indicator and poller status.
*/
create or replace view view_metadata_collation_raw as

/*
** Retrieve information.
*/

select

cgr.group_name,
cloud_name,
"group" as type,
priority,
metadata_name

from csv2_group_resources as cgr

left outer join csv2_group_metadata as cgm
on cgr.group_name=cgm.group_name

where enabled=1

union all select

group_name,
cloud_name,
"cloud" as type,
priority,
metadata_name

from csv2_group_resource_metadata

where enabled=1

;
