[Unit]
Description=Queries htcondor for job and machine data and executes condor commands
After=network.target

[Service]
Type=simple
User=cloudscheduler
ExecStart=/usr/bin/python3 /opt/cloudscheduler/data_collectors/condor/condor_poller.py /etc/cloudscheduler/cloudscheduler.yaml
Restart=always

[Install]
WantedBy=multi-user.target
