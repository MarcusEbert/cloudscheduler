[Unit]
Description=Queries the condor Schedd daemon for job info and relays it to a database, also checks database for condor commands to run (hold job)
After=network.target

[Service]
Type=simple
Environment=CONDOR_CONFIG=/etc/cloudscheduler/csenvironment.conf
User=cloudscheduler
ExecStart=/usr/bin/python3 /opt/cloudscheduler/data_collectors/condor/csjobs.py
Restart=always


[Install]
WantedBy=multi-user.target
