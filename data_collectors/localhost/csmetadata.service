[Unit]
Description= Retrieves a list of localhost clouds from the configured database and queries them for metadata which is relayed back to the database
After=network.target

[Service]
Type=simple
User=cloudscheduler
ExecStart=/usr/bin/python /opt/cloudscheduler/data_collectors/localhost/localhostPoller.py
Restart=on-abort


[Install]
WantedBy=multi-user.target
